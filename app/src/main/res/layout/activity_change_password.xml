<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/otterchef"
        android:alpha="0.45"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_18"
            android:background="@color/semi_transparent_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_change_password"
                android:layout_marginTop="@dimen/define_dimen_30"
                android:textColor="@color/main_brown"
                android:textStyle="bold"
                android:textSize="@dimen/define_dimen_30"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_old_password"
                android:layout_marginTop="@dimen/define_dimen_30"
                android:textColor="@color/main_brown"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12sp"/>

            <EditText
                android:id="@+id/edt_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:padding="@dimen/define_dimen_14"
                android:background="@drawable/bg_white_corner_30_border_brown"
                android:hint="@string/hint_password_old"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColorHint="@color/textColorAccent"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_new_password"
                android:layout_marginTop="@dimen/define_dimen_14"
                android:textColor="@color/main_brown"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12sp"/>

            <EditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:padding="@dimen/define_dimen_14"
                android:background="@drawable/bg_white_corner_30_border_brown"
                android:hint="@string/hint_password_new"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColorHint="@color/textColorAccent"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_confirm_new_password"
                android:layout_marginTop="@dimen/define_dimen_14"
                android:textColor="@color/main_brown"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_12sp"/>

            <EditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:padding="@dimen/define_dimen_14"
                android:background="@drawable/bg_white_corner_30_border_brown"
                android:hint="@string/hint_password_confirm"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColorHint="@color/textColorAccent"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_14sp" />

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_30"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_enable_corner_10"
                android:text="@string/label_change_password"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>