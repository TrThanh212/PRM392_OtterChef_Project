<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    tools:ignore="ContentDescription, UseCompatTextViewDrawableXml, UnusedAttribute">

    <ImageView
        android:layout_width="@dimen/define_dimen_60"
        android:layout_height="@dimen/define_dimen_60"
        android:src="@drawable/ic_avatar_default" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_brown"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/main_brown"/>

    <!-- CardView for Change Password -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardElevation="3.5dp"
        app:cardCornerRadius="8dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/label_change_password"
            android:drawableTint="@color/main_brown"
            android:textColor="@color/main_brown"
            android:drawableLeft="@drawable/ic_menu_change_password"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <!-- CardView for Sign Out -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardElevation="3.5dp"
        app:cardCornerRadius="9dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:text="@string/label_sign_out"
            android:drawableTint="@color/main_brown"
            android:textColor="@color/main_brown"
            android:drawableLeft="@drawable/ic_menu_sign_out"
            android:drawablePadding="10dp"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>
    <!-- Language Switch Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_title"
            android:textColor="@color/main_brown"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_language_vn" />

        <Switch
            android:id="@+id/switch_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/switch_label"
            android:textColor="@color/main_brown" />
    </LinearLayout>

    <!-- ImageView for otterchef -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/otterchef"
        android:alpha="0.45"
        tools:ignore="ContentDescription" />
</LinearLayout>